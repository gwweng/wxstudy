page {
  background-color: #EEE;
}

.top_image {
  display: flex;
  /* box-shadow: 0 5px 20px -5px rgba(0,0,0,0.50); */
  background-color: #999;
  flex-direction: column;
  width: 100%;
  height: 250px;
  position: fixed;
}
.top_image > image {
  width: 100%;
}
.top_image_author {
  margin-top:-30px;
  z-index:999;
  height:30px;
  display:flex;
  align-items: flex-end;
  justify-content: center;
  /* background-image: linear-gradient(-180deg, transparent 0%, rgba(0,0,0,0.5) 100%); */
}
.top_image_author > text {
  color:#FFF;
  font-size:12px;
  font-weight:100;
  /* margin-right:10px; */
  padding: 2px 5px;
  margin-bottom: 20px;
  background-color: rgba(0, 0, 0, 0.3);
}

.navigator {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  z-index: 999;
}
.navigator-back {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.navigator-back > image {
  height: 25px;
  width: 50px;
}

.navigator-title {
  flex: 1;
  margin-right: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.navigator-title > text {
  color: #FFF;
  font-size: 14px;
  font-weight: 400;
}


.body {
  padding: 20px;
}
.body > text {
  font-size: 16px;
  color: #333;
  font-weight: 300;
}

.date {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.date > .day {
  font-size: 42px;
  color: #333;
  font-weight: 200;
  margin-top: 20px;
}
.date > .other {
  font-size: 14px;
  color: #666;
  font-weight: 100;
  border-bottom: 1px solid #EEE;
  padding: 0px 10px 10px 10px;
}

.author {
  padding: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.author > text {
  font-size: 12px;
  color: #666;
  font-weight: 100;
}
.author > view {
  width: 20px;
  height: 1px;
  background-color: #EEE;
  margin: 0px 5px;
}

.body-container {
  top: 240px;
  position: absolute;
  bottom: 0rpx;
  border-radius:10px 10px 0px 0px;
  z-index:99;
  /* position:relative; */
  background-color:#FFF;
  border-top:1px solid #EEE;
  width: 100%;
}